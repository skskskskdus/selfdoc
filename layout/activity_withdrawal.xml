<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/withbg"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Activity_Withdrawal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

    <ImageButton
        android:id="@+id/back_Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="left"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/arrow"
        tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView_05"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="155dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="657dp"
            android:text="탈퇴하기"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="202dp"
        android:layout_height="43dp"
        android:layout_gravity="left"
        android:text="정말 셀프닥을"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
       android:layout_marginTop="140dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="77dp"
        android:layout_height="42dp"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="탈퇴"
        android:textColor="#FF0000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="202dp"
        android:layout_height="43dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="left"
        android:text="하시나요?"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="376dp"
            android:layout_height="19dp"
            android:layout_gravity="left"
            android:layout_marginStart="18dp"
            android:layout_marginTop="210dp"
            android:text="보관된 진단서와 데이터는 삭제됩니다."
            android:textColor="#6D6D6D"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sub_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/subbgbg">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="탈퇴하는 이유를 선택해주세요."
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp" />


        <CheckBox
            android:id="@+id/checkbox_01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="68dp"
            android:layout_marginStart="5dp"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="버그 및 에러사항 "
            android:layout_marginStart="60dp"
            android:layout_marginTop="80dp" />


        <CheckBox
            android:id="@+id/checkbox_02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="112dp"
            android:layout_marginStart="5dp"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="이용이 불편해서 "
            android:layout_marginStart="60dp"
            android:layout_marginTop="125dp" />

        <CheckBox
            android:id="@+id/checkbox_03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="158dp"
            android:layout_marginStart="5dp"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="사용빈도가 낮아서 "
            android:layout_marginStart="60dp"
            android:layout_marginTop="170dp" />

        <CheckBox
            android:id="@+id/checkbox_04"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="5dp"
            android:onClick="onCheckboxClicked" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="기록을 삭제하기 위해서 "
            android:layout_marginStart="60dp"
            android:layout_marginTop="212dp" />


        <ImageButton
            android:id="@+id/withdrawal_Button"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="350dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/button2" />
    </RelativeLayout>
</LinearLayout>
